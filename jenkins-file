pipeline {
    agent any 
    stages {
        stage ("1. 1. install ansible pkg") {
            steps {
                sh "amazon-linux-extras install -y ansible2"
                sh "mkdir -p inbound-1"
                sh "mkdir -p outbound-2"
            }
        }
        stage ("2. create file") {
            steps {
                sh "echo test.txt"
                sh "date"
                sh "cal"
                sh "ls -lat"
            }
        }
    }
}
